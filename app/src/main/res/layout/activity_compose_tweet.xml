<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/RelativeLayout" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dhrpande.mytweeter.ComposeTweet"
    tools:layout_editor_absoluteY="89dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/tweetText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tweetButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="158dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="193dp"
        tools:layout_editor_absoluteY="111dp" />

    <Button
        android:id="@+id/tweetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="onClickTweet"
        android:text="Tweet"
        tools:layout_editor_absoluteX="256dp"
        tools:layout_editor_absoluteY="540dp" />

    <ImageView
        android:id="@+id/tweetImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tweetButton"
        android:layout_marginStart="16dp"
        android:layout_marginTop="46dp"/>
</RelativeLayout>
